<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditTextButtonStyle">
        <item name="tint">@color/icon_grey_color</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SettingsBackground">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="backgroundTint">#80FFFFFF</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/icon_grey_color</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColorHint">@color/icon_grey_color</item>
    </style>

    <style name="track_style_1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_style_2">
        <item name="android:drawableTint">@color/icon_grey_color</item>
        <item name="android:textColor">@color/icon_grey_color</item>
        <item name="tint">@color/icon_grey_color</item>
    </style>

    <style name="MessageError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/icon_black_color</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/icon_black_color</item>
    </style>

    

</resources>