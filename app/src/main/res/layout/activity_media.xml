<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.media.activity.MediaActivity">

    <ImageView
        android:id="@+id/iv_button_back"
        style="@style/SettingsActivityTitle"
        android:layout_width="@dimen/button_back_size"
        android:layout_height="@dimen/button_back_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/padding4"
        android:layout_marginTop="@dimen/padding4"
        android:clickable="true"
        android:contentDescription="@string/title_back"
        android:focusable="true"
        android:src="@drawable/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/SettingsActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/padding12"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_vertical"
        android:text="@string/media"
        android:textAppearance="@style/Title"
        android:textSize="@dimen/primary_text_size_26"
        app:layout_constraintBottom_toBottomOf="@id/iv_button_back"
        app:layout_constraintStart_toEndOf="@id/iv_button_back"
        app:layout_constraintTop_toTopOf="@id/iv_button_back"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_media"
        style="@style/tab_item_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_button_back"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_media"/>

</androidx.constraintlayout.widget.ConstraintLayout>