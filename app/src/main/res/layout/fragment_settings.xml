<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.SettingsTheme"
    android:orientation="vertical"
    tools:context=".presentation.ui.settings.fragment.SettingsFragment"
    >

    <Toolbar
        android:id="@+id/tb_title"
        style="@style/SettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:title="@string/settings"
        android:titleTextAppearance="@style/toolbar_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding24"
        android:minHeight="@dimen/padding60"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding16">

        <TextView
            style="@style/SettingsTextColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/dark_theme"
            android:textSize="@dimen/primary_text_size_19"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/themeSwitcher"
            style="@style/SwitchButton"
            android:layout_width="@dimen/button_switch_width"
            android:layout_height="@dimen/button_switch_height"
            android:layout_gravity="center" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/side_indent">
        <TextView
            android:text="@string/share_app"
            style="@style/TextStyle"
            android:layout_gravity="start"
            />
        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/share"
            android:layout_gravity="end"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/side_indent">
        <TextView
            android:text="@string/support"
            style="@style/TextStyle"
            android:layout_gravity="start"
            />
        <ImageButton
            android:id="@+id/support_button"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/support"
            android:layout_gravity="end"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/side_indent">
        <TextView
            android:text="@string/user_agreement"
            style="@style/TextStyle"
            android:layout_gravity="start"
            />
        <ImageButton
            android:id="@+id/agreement_button"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/agreement_forward"
            android:layout_gravity="end"/>
    </FrameLayout>
</LinearLayout>

