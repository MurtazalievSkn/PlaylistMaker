<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    style="@style/track_style_1">

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/track_image_size"
        android:layout_height="@dimen/track_image_size"
        android:layout_marginVertical="@dimen/padding8"
        android:layout_marginStart="@dimen/padding12"
        android:layout_marginEnd="@dimen/padding8"
        android:scaleType="centerCrop"
        tools:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/padding12">

    <TextView
        android:id="@+id/track_name"
        style="@style/track_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_medium"
        android:maxLines="1"
        android:textSize="@dimen/text_size"
        tools:text="Самое длинное название трэка, который вы когда-либо видели" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/artist_name"
            style="@style/track_style_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_medium"
            android:maxLines="1"
            android:textSize="@dimen/primary_text_size_13"
            app:drawableEndCompat="@drawable/point2"
            tools:text="Самое длинное название группы, которое вы когда-либо видели" />

        <TextView
            android:id="@+id/track_duration"
            style="@style/track_style_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/ys_display_medium"
            android:maxLines="1"
            android:textSize="@dimen/primary_text_size_13"
            tools:text="3344:06" />

    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/track_forward"
        style="@style/track_style_2"
        android:layout_width="@dimen/padding24"
        android:layout_height="@dimen/padding24"
        android:src="@drawable/agreement_forward"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        />

</LinearLayout>