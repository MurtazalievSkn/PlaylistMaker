<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsBackground">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="EditTextButtonStyle">
        <item name="tint">@color/icon_black_color</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@color/black</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SettingsActivityTitle">
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/icon_black_color</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/icon_black_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_style_1">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="MessageError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/icon_black_color</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="you_were_looking_for_title_style">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="text_style_for_player_activity">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="player_button">
        <item name="android:backgroundTint">@color/gray_button_night_mode</item>
    </style>

    <style name="button_play">
        <item name="tint">@color/white</item>
    </style>

    <style name="SwitchButton">
        <item name="thumbTint">@color/yp_blue</item>
        <item name="trackTint">@color/yp_blue_light</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tab_item_style_1">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>
</resources>